#include <iostream>
using namespace std;

int main() {
	float x ,equity ,d ,totalC = 0, left;
	cout << "This program computes the % of equity left after costs . Enter a letter to exit."<<'\n';
	cout << "Enter initial amount ( equity ): ";
	cin >> equity;
	cout << "enter costs to compute : ";

	while (cin >> x) {
		if (x == 00) {
			break;
		}
		else {
			totalC += x;
			left = equity - totalC;
			d = (left / equity) * 100;

			cout <<"Left: " << left<< "EUR"<< "(" << d << "%)" << '\n';
			cout << "Percentage used: " << 100 - d << "%" << '\n';
		}
	

	}

	cout << "You have exited the program" << endl;
	

}
